extends base/html.pug

block preheader
  Use this link to reset your password. The link is only valid for #{tokenExpiresIn}.

block content
  tr
    td.content-cell
        div.f-fallback
        h1 Hi #{username},
        p You recently requested to reset your password for your #{ appName } account. Use the button below to reset it. strong This password reset is only valid for the next #{tokenExpiresIn}.
        table.body-action(align="center", width="100%", cellpadding="0", cellspacing="0", role="presentation")
            tr
            td.align-center
                table(width="100%", border="0", cellspacing="0", cellpadding="0", role="presentation")
                tr
                    td.align-center
                    a.f-fallback.button.button--green(href="#{actionUrl}", target="_blank") Reset your password
        p For security, this request was received from a #{operatingSystem} device using #{browserName}. If you did not request a password reset, please ignore this email or a(href="#{ supportEmail }") contact support if you have questions.
        p Thanks,
            br The #{ appName } team
        table.body-sub(role="presentation")
            tr
            td
                p.f-fallback.sub If youâ€™re having trouble with the button above, copy and paste the URL below into your web browser.
                p.f-fallback.sub #{actionUrl}
